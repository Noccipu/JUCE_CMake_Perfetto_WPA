{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start WPA Recording",
        "dependsOrder": "sequence",
        "type": "shell",
        "command": "powershell",
        "args": [
          "-Command",
          "& { wpr -start CPU -filemode }"
        ],
        "problemMatcher": []
      },
      {
        "label": "Stop WPA and Analyze",
        "type": "shell",
        "command": "powershell",
        "args": [
          "-Command",
          "& { Write-Host 'Launch your Perfetto tracing on https://ui.perfetto.dev/. WPR will stop...'; wpr -stop trace.etl; wpa trace.etl }"
        ],
        "problemMatcher": []
      },
      {
        "label": "Debug Build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build", "build",
          "--config", "Debug"
        ],
        "group": "build"
      },
      {
        "label": "Release Build",
        "type": "shell",
        "command": "cmake",
        "args": [
          "--build", "build",
          "--config", "Release"
        ],
        "group": "build"
      },
      {
        "label": "Debug - Build and Start WPA",
        "dependsOn": ["Debug Build", "Start WPA Recording"],
        "dependsOrder": "sequence",
        "type": "shell",
        "command": "echo", // Ne fait rien, juste pour contenter le syst√®me
        "args": ["Starting Debug WPA..."]
      },
      {
        "label": "Release - Build and Start WPA",
        "dependsOn": ["Release  Build", "Start WPA Recording"],
        "dependsOrder": "sequence",
        "type": "shell",
        "command": "echo",
        "args": ["Starting Release WPA..."]
      }
      
    ]
  }
  